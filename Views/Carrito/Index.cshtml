<h3>Detalle del carrito</h3>
<table class="table">
    <tr>
        <td>ID</td>
        <td>Nombre</td>
        <td>Precio</td>
        <td>Foto</td>

        <td>Cantidad</td>
        <td>Subtotal</td>
        <td>Opciones</td>
    </tr>
    @foreach (Item item in ViewBag.carrito)
    {
        <tr>
            <td>@item.producto.Id</td>
            <td>@item.producto.Nombre</td>
            <td>@item.producto.Precio</td>
            <td><img src="~/imagenes/@item.producto.Foto" width="90px"></td>

            <td>@item.cantidad</td>
            <td>@(item.producto.Precio * item.cantidad)</td>
            <td><a asp-controller="Carrito" asp-action="eliminar" asp-route-id="@item.producto.Id">Eliminar</a></td>
        </tr>
    }
    <tr>
        <td align="right" colspan="4">Total:</td>
        <td>@ViewBag.total</td>
    </tr>
</table>
<a asp-controller="Producto" asp-action="Index">Volver a la tienda</a>